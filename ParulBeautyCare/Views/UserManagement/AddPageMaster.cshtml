                    @using (Html.BeginForm("AddPageMaster", "UserManagement", FormMethod.Post, new { @class = "forms-sample" }))
                    {
                        @Html.HiddenFor(m => m.Action)
                        @Html.HiddenFor(m => m.PageId)
                        @Html.AntiForgeryToken()
                        <div class="row form-group">
                            <div class="col-sm-3">
                                <label class="col-form-label">
                                    Page Name
                                    @Html.ValidationMessageFor(m => m.PageName, "", new { @class = "text-danger h3" })
                                </label>
                                @Html.TextBoxFor(m => m.PageName, new Dictionary<string, object>() {
                                                 {"id","txtPageName"},
                                                 {"class","form-control text-capitalize"},
                                                    {"autocomplete","off"},
                                                 {"required","required"},
                                                 {"placeholder","Enter Page Name"}
                                                 })
                            </div>
                            <div class="col-sm-3">
                                <label class="col-form-label">
                                    Page URL
                                    @Html.ValidationMessageFor(m => m.PageUrl, "", new { @class = "text-danger h3" })
                                </label>
                                @Html.TextBoxFor(m => m.PageUrl, new Dictionary<string, object>() {
                                                                  {"id","txtPageURL"},
                                                                  {"class","form-control"},
                                                                     {"autocomplete","off"},
                                                                  {"placeholder","Enter Page URL"}
                                                                  })
                            </div>
                            <div class="col-sm-3">
                                <label class="col-form-label">
                                    Page Priority
                                    @Html.ValidationMessageFor(m => m.PagePriority, "", new { @class = "text-danger h3" })
                                </label>
                                @Html.TextBoxFor(m => m.PagePriority, new Dictionary<string, object>() {
                                                                  {"id","txtPagePriority"},
                                                                  {"class","form-control numberonly"},
                                                                  { "type","number"},
                                                                     {"autocomplete","off"},
                                                                  {"placeholder","Enter Page Priority"}
                                                                  })
                            </div>
                            <div class="col-sm-3">
                                <label class="col-form-label">IsActive</label>
                                <div class="input-group input-group-outline mb-3">
                                    @Html.DropDownListFor(x => x.IsActive, new List<SelectListItem>
                                           {
                                               new SelectListItem{ Text="Enable", Value = "true",Selected=true },
                                               new SelectListItem{ Text="Disable", Value = "false" }
                                            }, new { @class = "js-example-basic-single  w-100", @id = "IsActive" })
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mr-2 mt-3" onclick="return formSubmit('Are You sure you want to save data?')">Submit</button>

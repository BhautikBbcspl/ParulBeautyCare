<div id="sidebara">
    @*Close button for the sidebar*@
    <span id="closeButton">&times;</span>
    @*Sidebar content here*@
    <h2>Today's Appointments</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th><b>Customer Name</b></th>
                <th><b>Service</b></th>
                <th><b>Date</b></th>
                <th><b>Time</b></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Roma</td>
                <td>Facial</td>
                <td>05/07/2023</td>
                <td>10:00 AM</td>
            </tr>
            <tr>
                <td>Giya</td>
                <td>Hair Styling</td>
                <td>05/07/2023</td>
                <td>11:30 AM</td>
            </tr>
            <tr>
                <td>Diya</td>
                <td>Manicure</td>
                <td>05/07/2023</td>
                <td>2:00 PM</td>
            </tr>
        </tbody>
    </table>
</div>




<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">

                <div class="card-body">

                    <h1 class="pink"><b>BOOK APPOINTMENT </b></h1>

                    <div class="row">
                        @*<div class="col-md-2">

        </div>*@
                        <div class="col-md-8">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken();
                                <div class="row form-group">
                                    <div class="col-md-6">

                                        <label>Function Date</label>
                                        <input type="text" class="form-control" id="Date2" placeholder="Function Date" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label>Function Time</label>
                                        <div class="input-group input-group-outline mb-3">
                                            <select class="js-example-basic-single  w-100">
                                                <option value="">Select Time</option>
                                                <option>09:00</option>
                                                <option>10:00</option>
                                                <option>11:30</option>
                                                <option>01:30</option>
                                                <option>02:00</option>
                                                <option>03:00</option>
                                                <option>04:30</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Services</label>
                                    <div class="input-group input-group-outline mb-3">
                                        <select class="js-example-basic-multiple w-100" multiple="multiple" required>

                                            <option value="Manicure">Manicure</option>
                                            <option value="Pedicure">Pedicure</option>
                                            <option value="Bridal">Bridal Package</option>
                                            <option value="HairRebonding">Hair Rebonding</option>
                                            <option value="HairStraightening">Hair Straightening</option>
                                            <option value="Facial">Facial</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="Name">Name</label>
                                    <input type="text" class="form-control" id="txtName" placeholder="Name" required>
                                </div>
                                <div class="row form-group">
                                    <div class="col-md-6">
                                        <label for="MobileNo">Mobile No</label>
                                        <input type="text" class="form-control" id="txtmobileno" placeholder="Mobile Number" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="BookingAmount">Booking Amount</label>
                                        <input type="text" id="txtBookingAmount" class="form-control" placeholder="Booking Amount" pattern="[0-9]+" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="Address">Address</label>
                                    <input type="text" class="form-control" id="txtAddress" placeholder="Address" required>
                                </div>

                                <div class="form-group">
                                    <label for="Note">Note (Optional)</label>
                                    <textarea class="form-control" id="txtNote" placeholder="Any Notes ?" rows="3"></textarea>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    <button class="btn btn-light">Cancel</button>
                                </div>
                            }
                        </div>
                        <div class="col-md-2">

                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

@model IEnumerable<ParulBeautyCareDbClasses.DataModels.PBSubCategoryMasterRetrieve_Result>
@{
    ViewBag.Title = "Sub-Category Master";
    ViewBag.Module = "Master";
}

<div class="content-wrapper">
    <div class="card">
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
            <div class="bg-gradient-pinkHeader shadow-primary border-radius-lg pt-4 d-flex justify-content-between">
                <h2 class="text-white text-capitalize ps-3 title_margin"><b>Sub Category Master</b></h2>
                @if (Convert.ToInt32(TempData["InsertRight"]) == 1)
                {
                    <a class="btn btn-light btn-icon mb-2 mx-2 title_a" href="@Url.Action("AddSubCategoryMaster", "Master")">
                        <i class="fa fa-plus mx-2 text-black"></i><b>Add</b>
                    </a>
                }
            </div>
        </div>
        <div class="card-body">
            @*<h1 class="pink"><b>STAFF MANAGEMENT </b></h1>*@
            @*<div class="row">
                <div class="d-xl-flex justify-content-between align-items-center">

                    <a class="btn btn-sm btn-outline-primary btn-round mb-3" href="@Url.Action("AddSubCategoryMaster","Master")">
                        <i class="fa fa-plus mx-2 "></i>Add
                    </a>
                </div>
            </div>*@
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table id="base-style" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Action")
                                    </th>
                                    <th>
                                        @Html.DisplayName("CategoryId")
                                    </th>
                                    <th>
                                        @Html.DisplayName("SubCategoryName")
                                    </th>
                                    <th>
                                        @Html.DisplayName("IsMultiPerson")
                                    </th>
                                    <th>
                                        @Html.DisplayName("NumberOfPerson")
                                    </th>
                                    <th>
                                        @Html.DisplayName("YearPeriod")
                                    </th>
                                    <th>
                                        @Html.DisplayName("NoOfSitting")
                                    </th>
                                    <th>
                                        @Html.DisplayName("TimeDuraion")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Amount")
                                    </th>
                                    <th>
                                        @Html.DisplayName("IsActive")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Create Date")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Create User")
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Convert.ToInt32(TempData["ViewRight"]) == 1)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @if (Convert.ToInt32(TempData["UpdateRight"]) == 1)
                                                {
                                                    <a href="@Url.Action("EditSubCategoryMaster","Master",new { id = item.SubCategoryId })" class="mx-3"><i class="fa fa-pencil"></i></a>
                                                }

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CategoryName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SubCategoryName)
                                            </td>
                                            <td>
                                                @if (item.ismultiperson == true)
                                                {
                                                    <span>Yes</span>

                                                    @*<i class="fa fa-users"></i>*@
                                                }
                                                else
                                                {
                                                    <span>No</span>
                                                    @*<i class="fa fa-user"></i>*@
                                                }

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NumberOfPerson)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.yearperiod)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NoOfSitting)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TimeDuraion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Amount)
                                            </td>
                                            <td>

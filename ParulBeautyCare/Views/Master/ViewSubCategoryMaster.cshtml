                                                {
                                                    <div class="button r" id="button-2">
                                                        <input type="checkbox" class="checkbox" onclick='ActiveDeactiveStatusChange(this,"@item.SubCategoryId","StaffMaster")' @(item.IsActive == true ? "checked" : "")>
                                                        <div class="knobs"></div>
                                                        <div class="layer"></div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="button r" id="button-2">
                                                        <input type="checkbox" class="checkbox" disabled="disabled" onclick='ActiveDeactiveStatusChange(this,"@item.SubCategoryId","StaffMaster")' @(item.IsActive == true ? "checked" : "")>
                                                        <div class="knobs"></div>
                                                        <div class="layer"></div>
                                                    </div>
                                                }

                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td>You have no rights to view data</td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


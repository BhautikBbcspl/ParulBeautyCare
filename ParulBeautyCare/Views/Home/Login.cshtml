    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>

    <link rel="apple-touch-icon" sizes="76x76" href="~/Images/PBLogo.png">
    <link rel="icon" type="image/png" href="~/Images/PBLogo.png">
    <title>Parul's Beauty Care</title>


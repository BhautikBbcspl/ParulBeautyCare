@model ParulBeautyCareViewModel.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>

    <link rel="apple-touch-icon" sizes="76x76" href="~/Images/LogoParulBeautyCare.png">
    <link rel="icon" type="image/png" href="~/Images/LogoParulBeautyCare.png">
    <title>Parul's Beauty Care</title>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900|Roboto+Slab:400,700">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.2.0/fonts/remixicon.css" rel="stylesheet">

    <link href="~/Content/assets/login_assets/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/assets/login_assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="~/Content/assets/login_assets/css/nucleo-svg.css" rel="stylesheet" />
    <link href="~/Content/assets/login_assets/css/material-dashboard.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">


    <style>
    .main-content {
        width: 50%;
        border-radius: 20px;
        box-shadow: 0 5px 5px rgba(0,0,0,.4);
        margin: 5em auto;
        display: flex;
    }

    .company__info {
        background-color: #000;
        border-top-left-radius: 20px;
        border-bottom-left-radius: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        color: #fff;
    }

    .fa-android {
        font-size: 3em;
    }

    @*@media screen and (max-width: 640px) {
        .main-content {
            width: 90%;
        }

        .company__info {
            display: none;
        }

        .login_form {
            border-top-left-radius: 20px;
            border-bottom-left-radius: 20px;
        }
    }

    @media screen and (min-width: 642px) and (max-width:800px) {
        .main-content {
            width: 70%;
        }
    }

    *@
    .row > h2 {
        color: #008080;
    }

    .login_form {
        background-color: #fff;
        border-top-right-radius: 20px;
        border-bottom-right-radius: 20px;
        border-top: 1px solid #ccc;
        border-right: 1px solid #ccc;
    }

    form {
        padding: 0 2em;
    }

    .form__input {
        width: 100%;
        border: 0px solid transparent;
        border-radius: 0;
        border-bottom: 1px solid #aaa;
        padding: 1em .5em .5em;
        padding-left: 2em;
        outline: none;
        margin: 1.5em auto;
        transition: all .5s ease;
    }

        .form__input:focus {
            border-bottom-color: #008080;
            box-shadow: 0 0 5px rgba(0,80,80,.4);
            border-radius: 4px;
        }

    .btn {
        transition: all .5s ease;
        width: 70%;
        border-radius: 30px;
        color: #008080;
        font-weight: 600;
        background-color: #fff;
        border: 1px solid #008080;
        margin-top: 1.5em;
        margin-bottom: 1em;
    }

        .btn:hover, .btn:focus {
            background-color: #008080;
            color: #fff;
        }




    .async-hide {
        opacity: 0 !important
    }

    .invalidLogin {
        font-size: 14px;
        font-weight: 600;
        background-color: none;
        text-align: center;
        border-radius: 60px;
    }

        .invalidLogin ul {
            list-style-type: none !important;
        }
    /*....................*/
    .btn-5 {
        border: 0 solid;
        box-shadow: inset 0 0 20px rgba(255, 255, 255, 0);
        outline: 1px solid;
        outline-color: rgba(255, 255, 255, .5);
        outline-offset: 0px;
        text-shadow: none;
        background-color: #d81b60;
        color: white;
        transition: all 1250ms cubic-bezier(0.19, 1, 0.22, 1);
    }

        .btn-5:hover {
            border: 1px solid;
            color: black;
            box-shadow: inset 0 0 20px rgba(255, 255, 255, .5), 0 0 20px #d81b60;
            outline-color: rgba(255, 255, 255, 0);
            outline-offset: 15px;
            text-shadow: 1px 1px 2px #d81b60;
        }

    .input-group {
        position: relative;
    }

        .input-group .form-label {
            display: block;
            margin-bottom: 5px;
        }

        .input-group .form-control {
            display: block;
            width: 100%;
            height: calc(1.5em + 0.75rem + 2px);
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            line-height: 1.5;
            color: #495057;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

        .input-group .field-icon {
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%);
            cursor: pointer;
        }

        .input-group .toggle-password {
            padding: 5px;
            color: #999;
            transition: color 0.3s ease;
            Z-INDEX: 99;
        }

            .input-group .toggle-password:hover {
                color: #555;
            }




    </style>

</head>
<body style="background-image: url(../Images/bgImg.jpg); background-size: cover; background-position: center; background-repeat: no-repeat; ">
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NKDMSK6" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  
    <div class="container-fluid d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="row main-content text-center">
            <div class="col-md-5 text-center company__info">
                <span class="company__logo">
                    <img src="~/Images/Asset2.png" class="img-fluid" style="max-width: 100%; height: auto;" />
                </span>
            </div>
            <div class="col-md-7 col-xs-12 col-sm-12 login_form d-flex align-items-center">
                <div class="container-fluid" style="max-width: 600px;">
                    <div class="row">
                        <h3 class="font-weight-bolder">Sign In</h3>
                    </div>
                    <div class="row">
                            @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "forms-sample" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="input-group input-group-outline mb-3">
                                    <label class="form-label" name="txtUserPassword">UserName</label>
                                    @Html.TextBoxFor(m => m.UserName, new Dictionary<string, object>() {
                                                                    {"id","txtUsername"},
                                                                    {"class","form-control"},
                                                                    {"autocomplete","off"},
                                                                    {"tabindex","1"},
                                                                    {"autofocus","autofocus"}
                                                                        })


                                </div>
                                <div class="input-group input-group-outline mb-3">
                                    <label class="form-label" name="Password">Password</label>
                                    @Html.TextBoxFor(m => m.Password, new Dictionary<string, object>() {
                                                                            {"id","txtUserPassword"},
                                                                            {"class","form-control"},
                                                                            {"autocomplete","off"},

                                                                            //{"required","required"},
                                                                            {"type","password"},
                                                                            {"tabindex","2"}
                                                                    })
                                    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                </div>
                                <div class="text-center">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger invalidLogin" })

                                </div>
                                <div class="text-center">
                                    <button type="submit" id="submitBtn" class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-2 mb-0">Sign In</button>

                                </div>
                            }

                       
                    </div>
                </div>
            </div>
        </div>
    </div>



        <script src="~/Content/assets/login_assets/js/core/popper.min.js"></script>
        <script src="~/Content/assets/login_assets/js/core/bootstrap.min.js"></script>
        <script src="~/Content/assets/login_assets/js/material-dashboard.mine63c.js"></script>
        <script src="~/Content/assets/bootstrap/jquery-3.7.0.min.js"></script>
        <script>
            $(document).ready(function () {
                $('.form-control').each(function () {
                    checkInput($(this));
                });

                // Add event listener for input change
                $('.form-control').on('input', function () {
                    checkInput($(this));
                });

                // Function to check input value and toggle "is-filled" class
                function checkInput(input) {
                    if (input.val().trim() !== '') {
                        input.closest('.input-group').addClass('is-filled');
                    } else {
                        input.closest('.input-group').removeClass('is-filled');
                    }
                }
            });

            $(".toggle-password").click(function () {
                $(this).toggleClass("fas fa-eye-slash");
                input = $(this).parent().find("input");
                if (input.attr("type") == "password") {
                    input.attr("type", "text");
                } else {
                    input.attr("type", "password");
                }
            });
        </script>
</body>

</html>


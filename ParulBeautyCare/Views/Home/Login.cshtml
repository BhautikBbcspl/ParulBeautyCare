    <link href="~/Content/assets/login_assets/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/assets/login_assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="~/Content/assets/login_assets/css/nucleo-svg.css" rel="stylesheet" />
    <link href="~/Content/assets/login_assets/css/material-dashboard.min.css" rel="stylesheet" />
    <style>
        .async-hide {
            opacity: 0 !important
        }

        .invalidLogin {
            font-size: 14px;
            font-weight: 600;
            background-color: none;
            text-align: center;
            border-radius: 60px;
        }

            .invalidLogin ul {
                list-style-type: none !important;
            }
        /*....................*/
        .btn-5 {
            border: 0 solid;
            box-shadow: inset 0 0 20px rgba(255, 255, 255, 0);
            outline: 1px solid;
            outline-color: rgba(255, 255, 255, .5);
            outline-offset: 0px;
            text-shadow: none;
            background-color: #d81b60;
            color: white;
            transition: all 1250ms cubic-bezier(0.19, 1, 0.22, 1);
        }

            .btn-5:hover {
                border: 1px solid;
                color: black;
                box-shadow: inset 0 0 20px rgba(255, 255, 255, .5), 0 0 20px #d81b60;
                outline-color: rgba(255, 255, 255, 0);
                outline-offset: 15px;
                text-shadow: 1px 1px 2px #d81b60;
            }

        .input-group {
            position: relative;
        }

            .input-group .form-label {
                display: block;
                margin-bottom: 5px;
            }

            .input-group .form-control {
                display: block;
                width: 100%;
                height: calc(1.5em + 0.75rem + 2px);
                padding: 0.375rem 0.75rem;
                font-size: 1rem;
                line-height: 1.5;
                color: #495057;
                background-color: #fff;
                background-clip: padding-box;
                border: 1px solid #ced4da;
                border-radius: 0.25rem;
                transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
            }

            .input-group .field-icon {
                position: absolute;
                top: 50%;
                right: 10px;
                transform: translateY(-50%);
                cursor: pointer;
            }

            .input-group .toggle-password {
                padding: 5px;
                color: #999;
                transition: color 0.3s ease;
                Z-INDEX: 99;
            }

                .input-group .toggle-password:hover {
                    color: #555;
                }
    </style>
    @*<script defer data-site="demos.creative-tim.com" src="../../../api.nepcha.com/js/nepcha-analytics.js"></script>*@
</head>
<body>
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NKDMSK6" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>

    <main class="main-content  mt-0">
        <section>

            <div class="page-header min-vh-100">
                <div class="container">

                    <div class="col-6 d-lg-flex d-none h-100 my-auto pe-0 position-absolute top-0 start-0 text-center justify-content-center flex-column">

                        <div class="position-relative bg-gradient-primary h-100 m-3 px-7 border-radius-lg d-flex flex-column justify-content-center" style="background-image: url('../../Images/bg_img.jpg'); background-size: cover;">
                        </div>
                    </div>

                    <div class="col-xl-4 col-lg-5 col-md-7 d-flex flex-column ms-auto me-auto ms-lg-auto me-lg-5">
                        <div class="card card-plain">
                            <div class="align-self-center">
                                <img src="~/Images/Asset1.png" style="width: 150px; height: 150px" />
                            </div>

                            <div class="card-header align-self-center">

                                <h3 class="font-weight-bolder">Sign In</h3>

                            </div>

                            <div class="card-body">

                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="input-group input-group-outline mb-3">
                                        <label class="form-label" name="txtUserPassword">UserName</label>
                                        @Html.TextBoxFor(m => m.UserName, new Dictionary<string, object>() {
                                                                        {"id","txtUsername"},
                                                                        {"class","form-control"},
                                                                        {"autocomplete","off"},
                                                                        {"tabindex","1"},
                                                                        {"autofocus","autofocus"}
                                                                         })


                                    </div>
                                    <div class="input-group input-group-outline mb-3">
                                        <label class="form-label" name="Password">Password</label>
                                        @Html.TextBoxFor(m => m.Password, new Dictionary<string, object>() {
                                                                             {"id","txtUserPassword"},
                                                                             {"class","form-control"},
                                                                                {"autocomplete","off"},

                                                                             //{"required","required"},
                                                                             {"type","password"},
                                                                              {"tabindex","2"}
                                                                        })
                                        <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                    </div>
                                    <div class="text-center">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger invalidLogin" })

                                    </div>
                                    <div class="text-center">
                                        <button type="submit" id="submitBtn" class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-2 mb-0">Sign In</button>

                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>


    <script src="~/Content/assets/login_assets/js/core/popper.min.js"></script>
    <script src="~/Content/assets/login_assets/js/core/bootstrap.min.js"></script>
    <script src="~/Content/assets/login_assets/js/material-dashboard.mine63c.js"></script>
    @*<script src="~/Content/assets/login_assets/js/script.js"></script>*@
    <script src="~/Content/assets/bootstrap/jquery-3.7.0.min.js"></script>
    <script>
        $(document).ready(function () {
            debugger
            $('.form-control').each(function () {
                checkInput($(this));
            });

            // Add event listener for input change
            $('.form-control').on('input', function () {
                checkInput($(this));
            });

            // Function to check input value and toggle "is-filled" class
            function checkInput(input) {
                if (input.val().trim() !== '') {
                    input.closest('.input-group').addClass('is-filled');
                } else {
                    input.closest('.input-group').removeClass('is-filled');
                }
            }
        });

        $(".toggle-password").click(function () {
            debugger
            $(this).toggleClass("fas fa-eye-slash");
            input = $(this).parent().find("input");
            if (input.attr("type") == "password") {
                input.attr("type", "text");
            } else {
                input.attr("type", "password");
            }
        });
    </script>
</body>

</html>


@model ParulBeautyCareViewModel.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="apple-touch-icon" sizes="76x76" href="~/Images/LogoParulBeautyCare.png">
    <link rel="icon" type="image/png" href="~/Images/LogoParulBeautyCare.png">
    <title>Parul's Beauty Care</title>
    <link href="~/Content/assets/css/LoginStyle.css" rel="stylesheet" />
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/fontawesome-free-6.4.0-web/css/all.css" rel="stylesheet" />
    <link href="~/Content/assets/fontawesome-free-6.4.0-web/css/fontawesome.min.css" rel="stylesheet" />
    <script src="~/Content/assets/bootstrap/jquery-3.7.0.min.js"></script>

</head>
<body style="background-color: floralwhite !important">
    <div class="wrapper" id="app">
        <div class="card-form hoverCard">
            <div class="card-list">
                <div class="card-item">
                    <div class="card-item__side -front">
                        <div class="card-item__cover">
                            <div class="card-item__wrapper justify-content-center d-flex align-content-center">
                                <img src="~/Images/LogoParulBeautyCare.png" height="350" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "forms-sample" }))
            {
                @Html.AntiForgeryToken()
                <div class="card-form__inner">
                    <div class="card-title">Sign In</div>
                    <div class="card-input">
                        <label for="cardNumber" class="card-input__label"><i class="fa fa-user mx-2"></i>Username</label>
                        @Html.TextBoxFor(m => m.UserName, new Dictionary<string, object>() {
                                                                    {"id","txtUsername"},
                                                                    {"class","form-control card-input__input"},
                                                                    {"autocomplete","off"},
                                                                    {"tabindex","1"}
                                                                        })
                    </div>
                    <div class="card-input input-group">
                        <label for="cardName" class="card-input__label"><i class="fa fa-key mx-2"></i>Password</label>
                        @Html.TextBoxFor(m => m.Password, new Dictionary<string, object>() {
                                                                            {"id","txtUserPassword"},
                                                                            {"class","form-control card-input__input"},
                                                                            {"autocomplete","off"},
                                                                            {"type","password"},
                                                                            {"tabindex","2"}
                                                                    })
                        <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                    </div>
                    <div class="text-center">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger invalidLogin" })

                    </div>
                    <button type="submit" class="card-form__button">
                        Sign In
                    </button>
                </div>
            }
        </div>
    </div>

    <script>
        $(".toggle-password").click(function () {
            $(this).toggleClass("fas fa-eye-slash");
            input = $(this).parent().find("input");
            if (input.attr("type") == "password") {
                input.attr("type", "text");
            } else {
                input.attr("type", "password");
            }
        });
    </script>
</body>
</html>
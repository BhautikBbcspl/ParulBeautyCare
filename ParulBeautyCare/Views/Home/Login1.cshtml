                checkInput($(this));
            });

            // Function to check input value and toggle "is-filled" class
            function checkInput(input) {
                if (input.val().trim() !== '') {
                    input.closest('.input-group').addClass('is-filled');
                } else {
                    input.closest('.input-group').removeClass('is-filled');
                }
            }
        });

@model ParulBeautyCareViewModel.ViewModel.StockMgmtViewModel.StockAllocationMasterViewModel
@{
    ViewBag.Title = "Stock Allocation";
    ViewBag.Module = "Stock Management";
}

<div class="content-wrapper">
    <div class="card">
     
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
            <div class="bg-gradient-pinkHeader shadow-primary border-radius-lg pt-4 d-flex justify-content-between">
                <h2 class="text-white text-capitalize ps-3 title_margin"><b>STOCK ALLOCATION</b></h2>
                @*<a class="btn btn-light btn-rounded btn-icon mb-2 mx-2 title_a" href="@Url.Action("AddStockAllocation","StockManagement")">
            <i class="fa fa-plus mx-2 text-black"></i>
        </a>*@
                <a class="btn btn-light btn-icon mb-2 mx-2 title_a" href="@Url.Action("AddStockAllocation","StockManagement")">
                    <i class="fa fa-plus mx-2 text-black"></i><b>Add</b>
                </a>
            </div>
        </div>
        <div class="card-body">

            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table id="base-style" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Action")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Staff Member Name")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Product Name")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Quantity")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Allocation Date")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Allocate User")
                                    </th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.StockAllocationList)
                                {
                                    <tr>
                                        <td>
                                            @if (ViewBag.UpdateRight == 1)
                                            {
                                                <a href="@Url.Action("EditStockPurchase","StockManagement",new { allocationid = item.StockAllocationId })" class="mx-3"><i class="fa fa-pencil"></i></a>
                                            }
                                            else
                                            {
                                                <img src="~/Images/edit_dis_2.png" />
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StaffName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ProductName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Qty)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AllocationDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AllocateUser)
                                        </td>
                                        
                                    </tr>
                                }
                               

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

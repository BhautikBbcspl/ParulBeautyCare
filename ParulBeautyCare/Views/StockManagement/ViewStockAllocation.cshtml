@model ParulBeautyCareViewModel.ViewModel.StockMgmtViewModel.StockAllocationMasterViewModel
@{
    ViewBag.Title = "Stock Allocation";
    ViewBag.Module = "Stock Management";
}

<div class="content-wrapper">
    <div class="card">
     
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
            <div class="bg-gradient-pinkHeader shadow-primary border-radius-lg pt-3 d-flex justify-content-between row">
                <h2 class="text-white text-capitalize ps-3 title_margin col-md-6"><b>Stock Allocation</b></h2>


                @if (Convert.ToInt32(TempData["InsertRight"]) == 1)
                {
                    @*<a class="btn btn-light btn-rounded btn-icon mb-2 mx-2 title_a" href="@Url.Action("AddStockAllocation","StockManagement")">
                <i class="fa fa-plus mx-2 text-black"></i>
            </a>*@
                    <a class="dedcription-btn anc col-md-6" href="@Url.Action("AddStockAllocation","StockManagement")">
                        <span class="name-descripeion text-uppercase"> <b>Add Records</b> </span>
                        <div class="btn-icon brain">
                            <i class="fas fa-plus"> </i>
                        </div>
                    </a>
                }
            </div>
        </div>
        <div class="card-body">

            <div class="row">
                <div class="col-12">
                        <table id="Mybase-style" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Action")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Product Image")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Staff Member Name")
                                    </th>

                                    <th>
                                        @Html.DisplayName("Product Name")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Quantity")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Allocation Date")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Allocate User")
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.StockAllocationList)
                                {
                                <tr>
                                    <td>
                                        @if (Convert.ToInt32(TempData["UpdateRight"]) == 1)
                                        {
                                            <a href="@Url.Action("EditStockAllocation","StockManagement",new { id = item.StockAllocationId })" class="mx-3"><i class="fa fa-pencil"></i></a>
                                        }
                                        else
                                        {
                                            @*<img src="~/Images/edit_dis_2.png" style=" width: 13%;" />*@
                                            <img src="~/Images/icons8-no-edit-16 (1).png" />
                                        }
                                    </td>
                                    <td>
                                        <a class="lightbox" href="#@item.ProductImage">
                                            <img src="../@item.ProductImage" />
                                        </a>
                                        <div class="lightbox-target" id="@item.ProductImage">
                                            <img src="../@item.ProductImage" />
                                            <a class="lightbox-close" href="#"></a>
                                        </div>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StaffName)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Qty)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AllocationDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AllocateUser)
                                    </td>

                                </tr>
                                }
                               

                            </tbody>
                        </table>
                </div>
            </div>
        </div>
    </div>
</div>
